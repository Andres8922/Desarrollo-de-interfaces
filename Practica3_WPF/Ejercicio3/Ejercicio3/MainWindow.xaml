<Window x:Class="Ejercicio3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Label FontSize="25" Margin="0,80,0,0" HorizontalAlignment="Center">Usuario:</Label>
        <TextBox FontSize="20" Width="180" Height="45" HorizontalAlignment="Center" Background="LightGray" Margin="0,0,0,120" Name="Usu"/>

        <Label FontSize="25" Margin="0,220,0,0" HorizontalAlignment="Center">Contraseña:</Label>
        <PasswordBox FontSize="20" Width="180" Height="45" HorizontalAlignment="Center" Background="LightGray" Margin="0,150,0,0" Name="Cont" MaxLength="8" PasswordChar="*"/>

        <Button FontSize="20" Width="100" Height="40" HorizontalAlignment="Center" Margin="0,320,0,0" Click="Click">Verificar</Button>

    </Grid>
</Window>
