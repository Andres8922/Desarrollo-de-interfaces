<Window x:Class="Ejercicio8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Margin="10">

            <TextBlock><Bold>Módulos que pienso aprobar</Bold></TextBlock>

            <CheckBox Margin="0,5,0,0" Name="todos" Checked="todos_Checked" Unchecked="todos_Unchecked" IsThreeState="True">Todos los módulos</CheckBox>

            <StackPanel>

                <CheckBox Margin="20,10,0,0" Name="D">Desarrollo de interfaces</CheckBox>
                <CheckBox Margin="20,0,0,0" Name="S">Sistemas de gestión empresarial</CheckBox>
                <CheckBox Margin="20,0,0,0" Name="A">Acceso a datos</CheckBox>

            </StackPanel>



        </StackPanel>

    </Grid>
</Window>
