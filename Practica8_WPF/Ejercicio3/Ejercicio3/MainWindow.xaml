<Window x:Class="Ejercicio3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.CommandBindings>
            <CommandBinding Command="ApplicationCommands.New" Executed="New_Executed" CanExecute="CommandNew_CanExecute"/>
            <CommandBinding Command="ApplicationCommands.Save" Executed="Save_Executed" CanExecute="CommandSave_CanExecute"/>
            <CommandBinding Command="ApplicationCommands.Cut" Executed="Cut_Executed" CanExecute="CommandCut_CanExecute"/>
            <CommandBinding Command="ApplicationCommands.Copy" Executed="Copy_Executed" CanExecute="CommandCopy_CanExecute"/>
            <CommandBinding Command="ApplicationCommands.Paste" Executed="Paste_Executed" CanExecute="CommandPaste_CanExecute"/>
        </Grid.CommandBindings>

        <DockPanel>

            <Menu DockPanel.Dock="Top">

                <MenuItem Header="Archivo" Background="Cyan">

                    <MenuItem Header="Nuevo" Command="ApplicationCommands.New">
                        <MenuItem.Icon>
                            <Image Source="/img/nuevo.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    
                    
                    <MenuItem Header="Guardar" Command="ApplicationCommands.Save">
                        <MenuItem.Icon>
                            <Image Source="/img/guardar.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>

                </MenuItem>

                
                <MenuItem Header="Editar" Background="CadetBlue">

                    <MenuItem Header="Cortar" Command="ApplicationCommands.Cut">
                        <MenuItem.Icon>
                            <Image Source="/img/cortar.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Copiar" Command="ApplicationCommands.Copy">
                        <MenuItem.Icon>
                            <Image Source="/img/copiar.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Pegar" Command="ApplicationCommands.Paste">
                        <MenuItem.Icon>
                            <Image Source="/img/pegar.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>

                </MenuItem>

            </Menu>
            
        </DockPanel>

        <TextBox Margin="0,20,0,0" Name="txtbox"></TextBox>

    </Grid>
</Window>
