<Window x:Class="Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel  Margin="10,0,0,0">

            <TextBlock FontSize="16" Margin="30" HorizontalAlignment="Center"><Bold>Formulario de Contacto</Bold></TextBlock>

            <Label HorizontalAlignment="Center">Nombre</Label>

            <TextBox Height="20" Width="120" HorizontalAlignment="Center" Background="LightGray" Margin="10"></TextBox>


            <Label HorizontalAlignment="Center">Correo Electrónico</Label>

            <TextBox Height="20" Width="120" HorizontalAlignment="Center" Background="LightGray" Margin="10"></TextBox>

            <Button Content="Enviar" Width="80" Height="30" HorizontalAlignment="Center" Margin="0,20,0,0" Background="LightBlue"/>


            <StackPanel>

                <Button Content="Cancelar" Width="80" Height="30" HorizontalAlignment="Center" Margin="0,10,0,0" Background="LightCoral"/>

                <Button Content="Limpiar" Width="80" Height="30" HorizontalAlignment="Center" Margin="0,10,0,0" Background="LightGreen"/>

            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
