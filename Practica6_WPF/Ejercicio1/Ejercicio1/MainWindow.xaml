<Window x:Class="Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio1"
        mc:Ignorable="d"       
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="_Nombre" Target="{Binding ElementName=txtNombre}" Margin="40,0,0,0"/>
            
            <Image Source="/Img/img1.png" Width="30" Height="50" Grid.Column="0" HorizontalAlignment="Left" Margin="15,0,0,0"/>


            <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="_Email" Target="{Binding ElementName=txtEmail}" Margin="40,0,0,0"/>

            <Image Source="/Img/img2.png" Width="35" Height="50" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1" Margin="15,0,0,0"/>


            <TextBox Name="txtEmail" Grid.Column="2" Grid.Row="1" Height="40" Width="650"/>

            <TextBox Name="txtNombre" Grid.Column="2" Height="40" Width="650" />

            <TextBox Name="txtComentario" Height="250" Width="750" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"/>

        </Grid>

    </Grid>
</Window>
