<Window x:Class="Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel>

            <TextBlock Text="Nombre:" FontSize="16" Margin="10"/>

            <TextBox Width="80" Height="20" Background="Aquamarine" HorizontalAlignment="Left" Margin="12,2"></TextBox>

            <TextBlock Text="Edad:" FontSize="16" Margin="10"/>

            <TextBox Width="80" Height="20" Background="Aquamarine" HorizontalAlignment="Left" Margin="12,2"></TextBox>

            <Button Width="50" Height="30" HorizontalAlignment="Left" Margin="25,30,0,0" ToolTip="Haz clic aquí para enviar los datos">
                <Bold>Enviar</Bold>
            </Button>

        </StackPanel>

    </Grid>
</Window>
